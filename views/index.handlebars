<h1 class = "head1"><a class = "headTrue" href = https://www.youtube.com/watch?v=f5tnVODuI-g>Hunger for Borgar</a></h1>
<div class = "borgarDiv">
  <div class = "regularBorgars">
    <h2 class = "head2">Burgers</h2>
    <ul>
      {{#each burger}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class = "eatenBorgars">
    <h2 class = "head3">Devoured</h2>
    <ul>
      {{#each burger}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/if}}
      {{/each}}
    </ulclass = "burger">
  </div>
</div>

<div class = "formDiv">
  <h2 class = "head4">Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>